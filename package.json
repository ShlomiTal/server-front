{
  "name": "crypto-signal-pwa",
  "version": "1.0.0",
  "description": "Progressive Web App for crypto trading signals with self-improving AI",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "npm install --omit=dev && npm prune --production",
    "test": "jest --watchAll",
    "deploy": "npm run build && git push origin main",
    "healthcheck": "curl -f http://localhost:$PORT || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ShlomiTal/crypto-signal-pwa.git"
  },
  "keywords": [
    "crypto",
    "trading",
    "signals",
    "pwa",
    "AI"
  ],
  "author": "ShlomiTal",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "node-fetch": "^3.3.2",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^2.4.1",
    "morgan": "^1.10.0",
    "@tensorflow/tfjs-node": "^4.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}